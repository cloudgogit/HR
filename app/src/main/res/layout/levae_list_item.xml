<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:outlineAmbientShadowColor="@color/light_color"
    tools:context=".menu.ui.home.EmployeeFragment">




    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/leave_lay"
        android:layout_margin="10dp"
        >




        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emp_el_name"
                android:textColor="@color/black"
                android:textSize="16dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/leave_type"
                android:textColor="@color/black"
                android:textSize="12dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/no_of_days"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/reject"
                android:layout_width="35dp"
                android:layout_height="35dp"

             android:background="@drawable/ic_reject"
                />

            <ImageView
                android:id="@+id/approve"
                android:layout_width="35dp"
                android:layout_height="35dp"
android:layout_marginLeft="5dp"
                android:background="@drawable/ic_success"
                />

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>